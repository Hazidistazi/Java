        select count(cid) as count from course
    </select>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from course
        where cid = #{cid,jdbcType=BIGINT}
    </select>
    <delete id="deleteCourseById" parameterType="java.lang.Long">
        delete from course
        where cid = #{cid,jdbcType=BIGINT}
    </delete>

    <insert id="insert" parameterType="com.example.second.entity.Course">
        insert into course (cid, name,teacher,introduce,credit,classroom )
        values (#{cid,jdbcType=BIGINT}, #{name,jdbcType=VARCHAR}, #{teacher,jdbcType=VARCHAR},
        #{introduce,jdbcType=VARCHAR},#{credit,jdbcType=VARCHAR},#{classroom,jdbcType=VARCHAR},)
    </insert>
    <insert id="addCourse" parameterType="com.example.second.entity.Course">
        insert into course
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="cid != null">
                cid,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="teacher != null">
                teacher,
            </if>
            <if test="introduce != null">
                introduce,
            </if>
            <if test="credit != null">
                credit,
            </if>
            <if test="classroom != null">
                classroom,
            </if>
        </trim>

        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="cid != null">
                #{cid,jdbcType=BIGINT},
            </if>
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="teacher != null">
                #{teacher,jdbcType=VARCHAR},
            </if>
            <if test="introduce != null">
                #{introduce,jdbcType=VARCHAR},
            </if>
            <if test="credit != null">
                #{credit,jdbcType=VARCHAR},
            </if>
            <if test="classroom != null">
                #{classroom,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <update id="updateCourse" parameterType="com.example.second.entity.Course">
        update course
        <set>
            <if test="cid != null">
                cid = #{cid,jdbcType=BIGINT},
            </if>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="teacher != null">
                teacher = #{teacher,jdbcType=VARCHAR},
            </if>
            <if test="introduce != null">
                introduce = #{introduce,jdbcType=VARCHAR},
            </if>
            <if test="credit != null">
                credit = #{credit,jdbcType=VARCHAR},
            </if>
            <if test="classroom != null">
                classroom = #{classroom,jdbcType=VARCHAR},
            </if>

        </set>
        where cid = #{cid,jdbcType=BIGINT}
    </update>
    <update id="updateByPrimaryKey" parameterType="com.example.second.entity.Course">
        update course

        set name = #{name,jdbcType=VARCHAR},
            teacher = #{teacher,jdbcType=VARCHAR},
            introduce = #{introduce,jdbcType=VARCHAR},
            credit = #{credit,jdbcType=VARCHAR},
            classroom = #{classroom,jdbcType=VARCHAR},

